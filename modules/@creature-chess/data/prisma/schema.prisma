generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model bots {
  id           Int    @id @default(autoincrement())
  nickname     String @db.VarChar(20)
  games_played Int    @default(0)
  wins         Int    @default(0)
  ambition     Int
  composure    Int
  vision       Int
}

model users {
  id              Int     @id @default(autoincrement())
  auth_id         String  @db.VarChar(64)
  nickname        String? @db.VarChar(20)
  profile_title   Int?
  profile_picture Int?
  games_played    Int     @default(0)
  wins            Int     @default(0)
}
