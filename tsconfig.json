{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@testing": ["./src/_testing"],
            "@testing/*": ["./src/_testing/*"],
            "@common": ["./src/shared"],
            "@common/*": ["./src/shared/*"],
            "@app": ["./src/app"],
            "@app/*": ["./src/app/*"]
        },
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "importHelpers": true,
        "lib": [ "es2015", "dom" ],
        "downlevelIteration": true
    }
}
