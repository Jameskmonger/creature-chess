{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@testing": ["./src/_testing"],
            "@testing/*": ["./src/_testing/*"],
            "@common": ["./packages/shared"],
            "@common/*": ["./packages/shared/*"],
            "@app": ["./packages/app"],
            "@app/*": ["./packages/app/*"],
            "tslib" : ["./node_modules/tslib/tslib"]
        },
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "importHelpers": true,
        "lib": [ "es2015", "dom" ],
        "downlevelIteration": true
    }
}
