{
	"private": true,
	"name": "creature-chess",
	"version": "1.0.0",
	"description": "Creature Chess",
	"scripts": {
		"dev:web": "yarn workspace @creature-chess/web dev",
		"outdated": "npm outdated && lerna exec --no-bail -- npm outdated",
		"test": "lerna run test",
		"release": "lerna version --conventional-commits",
		"build:create-bin": "sh ./scripts/createBin.sh",
		"build": "lerna run build --stream",
		"build:storybook": "lerna run build-storybook --scope=@creature-chess/ui",
		"post-pull": "npm i && npm run build",
		"dockerup": "docker-compose build && docker-compose up",
		"start:app": "lerna run start --scope=@creature-chess/app --stream",
		"dev:app": "lerna run dev --scope=@creature-chess/app --stream",
		"tools": "lerna run start --scope=@creature-chess/tools --stream",
		"storybook": "lerna run storybook --scope=@creature-chess/ui --stream",
		"lint": "eslint -c .eslintrc.js --ext .ts ./packages",
		"lint:fix": "npm run lint -- --fix"
	},
	"workspaces": [
		"modules/@creature-chess/*",
		"modules/@shoki/*",
		"apps/*"
	],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@storybook/addon-actions": "^6.3.12",
		"@storybook/addon-essentials": "^6.3.12",
		"@storybook/addon-links": "^6.3.12",
		"@storybook/builder-webpack5": "^6.4.0-rc.7",
		"@storybook/react": "^6.3.12",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.3",
		"@types/react-modal": "^3.12.0",
		"@types/ws": "^7.4.7",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"eslint": "^7.31.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-jsdoc": "^36.0.4",
		"eslint-plugin-prefer-arrow": "^1.2.3",
		"eslint-plugin-react": "^7.24.0",
		"jest": "^27.0.6",
		"jest-standard-reporter": "^2.0.0",
		"lerna": "^4.0.0",
		"neworbit-stylelint-config": "^3.0.2",
		"node-sass": "^4.11.0",
		"stylelint": "^13.13.1",
		"stylelint-no-unsupported-browser-features": "^5.0.1",
		"stylelint-order": "^4.1.0",
		"stylelint-scss": "^3.20.1",
		"ts-jest": "^27.0.4",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@types/react": "^17.0.15",
		"@types/react-dom": "^17.0.9",
		"react": "^17.0.2",
		"react-dnd": "^14.0.2",
		"react-dom": "^17.0.2",
		"redux": "^4.1.0",
		"redux-saga": "^1.1.3"
	},
	"packageManager": "yarn@3.1.1"
}
