{
	"private": true,
	"name": "creature-chess",
	"version": "1.0.0",
	"description": "Creature Chess",
	"main": "index.js",
	"scripts": {
		"bootstrap": "lerna bootstrap --hoist",
		"build": "npm run build:server && npm run build:server-info && npm run build:client",
		"build:client": "lerna run build --scope=@creature-chess/app --stream",
		"build:server": "lerna run build --scope=@creature-chess/server --stream",
		"build:server-info": "lerna run build --scope=@creature-chess/server-info --stream",
		"start": "npm-run-all --parallel start:client start:server --print-label",
		"start:client": "lerna run start --scope=@creature-chess/app --stream",
		"start:server": "lerna run start --scope=@creature-chess/server --stream",
		"start:server-info": "lerna run start --scope=@creature-chess/server-info --stream",
		"dev": "npm-run-all --parallel dev:client dev:server --print-label",
		"dev:client": "lerna run dev --scope=@creature-chess/app --stream",
		"dev:server": "lerna run dev --scope=@creature-chess/server --stream",
		"benchmark:balancing": "ts-node -r tsconfig-paths/register -P ./tsconfig.json ../piece-balancing.ts",
		"benchmark:battle": "ts-node -r tsconfig-paths/register ./src/benchmark/battle.ts",
		"benchmark:botgames": "ts-node -r tsconfig-paths/register ./src/benchmark/botgames.ts",
		"test:run": "ts-node --files run-tests.ts",
		"test:rundebug": "ts-node --files run-tests.ts ci",
		"test": "npm run test:run",
		"lint:sass": "stylelint \"./src/**/*.scss\"",
		"lint:ts": "tslint -c tslint.json \"./src/**/*.{ts,tsx}\"",
		"lint": "npm run lint:ts && npm run lint:sass"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/bad-words": "^3.0.0",
		"@types/enzyme": "^3.9.0",
		"@types/enzyme-adapter-react-16": "^1.0.5",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/node": "^11.11.3",
		"alsatian": "2.4.0",
		"awesome-typescript-loader": "^5.2.1",
		"circular-dependency-plugin": "^5.0.2",
		"cname-webpack-plugin": "^2.0.1",
		"cpy-cli": "^2.0.0",
		"css-loader": "^2.1.1",
		"enzyme": "^3.9.0",
		"enzyme-adapter-react-16": "^1.10.0",
		"html-webpack-plugin": "^3.2.0",
		"http-server": "~0.9.0",
		"lerna": "^3.22.1",
		"mini-css-extract-plugin": "^0.5.0",
		"neworbit-stylelint-config": "^2.0.7",
		"neworbit-tslint-config": "^4.0.0",
		"node-sass": "^4.11.0",
		"nodemon": "^1.18.11",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^7.1.0",
		"stylelint": "^9.10.1",
		"stylelint-no-unsupported-browser-features": "^3.0.2",
		"stylelint-order": "^2.1.0",
		"stylelint-scss": "^3.5.4",
		"stylelint-webpack-plugin": "^0.10.5",
		"tap-bark": "^1.0.0",
		"tsconfig-paths": "^3.8.0",
		"tslint": "^5.14.0",
		"typescript": "^3.3.3333",
		"webpack": "^4.29.6",
		"webpack-cli": "^3.2.3",
		"webpack-dev-server": "^3.2.1"
	}
}
